# Dockerfile for AI50 Extractor (with instructor + pydantic)
FROM python:3.11-slim

WORKDIR /app

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ ./src/
COPY data/forbes_ai50_seed.json ./data/

# Set environment variables
ENV PYTHONUNBUFFERED=1

# Entry point for extraction
CMD ["python", "-c", "from src.extractor_gcp import main; main()"]

